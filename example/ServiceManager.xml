		<DBConnectionpool>8</DBConnectionpool>
		<DBInstanceMasterTable>INSTANCE_MASTER</DBInstanceMasterTable>
		<DBServiceInstanceMappingTable>SERVICE_INSTANCE_MAPPING</DBServiceInstanceMappingTable>
