<ServiceManager>

	<Framework>
	 	<AppTag>ServiceManager</AppTag>
		<MaxProcessingThreads>10</MaxProcessingThreads>
		<LogDirectory>../logs</LogDirectory>
		<LogDuration>1800</LogDuration>
		<DebugLevel>31</DebugLevel>
		<EventObjPoolSize>2500</EventObjPoolSize>
		<OAMPort>7176</OAMPort>
		<Libraries>
			<LibName>lib6dResourceCache.so.1.0.0</LibName>
		</Libraries>
		<LogFlushCount>600</LogFlushCount>
                <InstanceID>11</InstanceID>
                <ANUpperThreshold>10000</ANUpperThreshold>
                <ANLowerThreshold>1000</ANLowerThreshold>
                <LogMode>1</LogMode>
                <LogStashAddress>10.0.10.118:5000</LogStashAddress>
	</Framework>

	<lib6dResourceCache>
		<LogLevel>31</LogLevel>
